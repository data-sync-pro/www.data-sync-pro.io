{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    },
    {
      "name": "faq-content",
      "installMode": "lazy",
      "updateMode": "lazy",
      "resources": {
        "files": [
          "/assets/faq-item/**/*.html",
          "/assets/data/faqs.json"
        ]
      }
    },
    {
      "name": "recipe-content",
      "installMode": "lazy",
      "updateMode": "lazy",
      "resources": {
        "files": [
          "/assets/recipe-content/**/*.html",
          "/assets/data/recipes.json",
          "/assets/executables/**"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "faq-api",
      "urls": [
        "/assets/data/faqs.json"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "5s"
      }
    },
    {
      "name": "faq-content",
      "urls": [
        "/assets/faq-item/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 500,
        "maxAge": "7d"
      }
    },
    {
      "name": "recipe-api",
      "urls": [
        "/assets/data/recipes.json"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "5s"
      }
    },
    {
      "name": "recipe-content",
      "urls": [
        "/assets/recipe-content/**",
        "/assets/executables/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 500,
        "maxAge": "7d"
      }
    }
  ]
}
